
@{
    ViewBag.Title = "Loai";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/SanPhamAdmin.css" rel="stylesheet" />
<style>
    .frmauthor {
        font-family: serif;
    }

    .btncreate {
        border-radius: 5px;
        background-color: red;
        border: none;
        color: white;
        padding: 10px 23px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        color: white;
    }

    table {
        text-align: center;
    }

    th {
        color: black;
        background-color: #E8E8E8;
    }
</style>
<script>
    function validateCreate() {
        var x = document.forms["myForm"]["ten"].value;


        if (x == "") {
            alert("Vui lòng điền đầy đủ thông tin sách trước khi tạo !");
            return false;
        }
    }

</script>
<h4 style="font-family:serif">Quản Lý Loại Sản Phẩm</h4>
<hr />
<form action="/Admin/Quanly/createLoai" method="post" name="myForm">
    <form class="frmauthor">
        <div class="context">
            <div class="text_left_author">
                <p style="font-weight:bold;font-size:20px; font-family:serif">Thông tin Loại</p>
                <table class="table_Author">
                    <tr>
                        <td>

                            <input type="text" name="ten" placeholder="Tên Loại">

                        </td>

                    </tr>
                

                </table>
                <br />




                <div>
                    <a href="@Url.Action("Index","Admin")" class="btncreate"> Quay Lại</a>

                    <input type="submit" class="btncreate" onclick="return validateCreate()" style="width:130px; background-color:#17aa67" value="Tạo " />



                </div>
            </div>

            <table class="table table-dark" style="width:50%;">
                <thead>
                    <tr>
                        <th>Tên Loại</th>
           
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.sklist)
                    {
                        <tr>

                            <td>@item.TenLoai</td>
                        

                        </tr>
                    }

                </tbody>
            </table>
            <div class="text_right_author">

            </div>
        </div>
    </form>



</form>



