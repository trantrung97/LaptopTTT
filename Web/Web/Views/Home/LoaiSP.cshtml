@using Web.Models
@model List<SANPHAM>
@{
    ViewBag.Title = "LoaiSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/css/bootstrap335/bootstrap.min.css" rel="stylesheet" />

<link href="~/Content/index.css" rel="stylesheet" />
<link href="~/Content/sebastian-carousel.css" rel="stylesheet" />

<div class="bg-4">
    <div class="container">
        <div id="home-carousel" data-sc data-sc-theme="fullwidth" data-sc-autostart="true">
            <img src="~/Images/banner1.png" width="100%" height="250px" />
            <img src="~/Images/banner2.jpg" width="100%" height="250px" />
            <img src="~/Images/banner3.jpg" width="100%" height="250px" />
        </div>
        <script src="~/Content/sebastian-carousel.js"></script>
    </div>
</div>
<div class="bg-4">
    <div class="container">
        <div class="row">
           
                <div class="col-sm-6 col-sm-offset-3 text-center"><h2>THƯƠNG HIỆU LAPTOP</h2></div>
        

            <table style="width:100%;text-align:center">
                <tr>
                    <td style="width:16%"><a href="/Home/ChonSP?IDNSX=6"><img src="~/Images/apple.jpg"</a></td>
                    <td style="width:16%"><a href="/Home/ChonSP?IDNSX=1"><img src="~/Images/Acer.png"</a></td>
                    <td style="width:16%"><a href="/Home/ChonSP?IDNSX=2"><img src="~/Images/asus.png"</a></td>
                    <td style="width:16%"><a href="/Home/ChonSP?IDNSX=4"><img src="~/Images/Hp.png"</a></td>
                    <td style="width:16%"><a href="/Home/ChonSP?IDNSX=3"><img src="~/Images/dell.png"</a></td>
                    <td style="width:16%"><a href="/Home/ChonSP?IDNSX=5"><img src="~/Images/Msi.png"</a></td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div>

    <div class="col-sm-6 col-sm-offset-3 text-center"><h2>LapTop </h2></div>
    <div class="col-sm-12 ">
        <div class="bg-4">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-3 col-xs-4">
                            <div class="product">


                                <a href="/Home/ChiTietSP?ID=@item.MaSP" style="text-decoration:none;">
                                    <p style="text-align:center;margin-top:10px;">
                                        <img src="~/Images/laptop/@item.HinhMinhHoa" class="img-responsive" alt="Sản phẩm 1">
                                    <p style="text-align:center;color:red;font-size:18px">@item.TenSP</p>
                                    <p>
                                        Màn hình: @item.ManHinh
                                    </p>
                                    <p>
                                        CPU : @item.CPU
                                    </p>
                                    <p>
                                        RAM : @item.RAM
                                    </p>
                                    <div class="caption">
                                        <div class="blur"></div>
                                        <div class="caption-text">
                                            <h3 style="border-top:2px solid white;border-bottom:2px solid white;padding:10px;">@string.Format("{0:0,0}", item.DonGia) VND</h3>
                                            <p>...</p> <a class=" btn btn-default" style="background-color:#FFFF00;font-weight:bold" href="/Home/ChiTietSP?ID=@item.MaSP"><span class="glyphicon glyphicon-shopping-cart"> Mua</span></a>
                                        </div>
                                    </div>
                                </a>

                            </div>
                        </div><!--/col-->

                    }
                </div>
            </div><!--/row-->
        </div><!--/container-->
    </div></div>


