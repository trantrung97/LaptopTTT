
@{
    ViewBag.Title = "Tintuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/bootstrap335/bootstrap.min.css" rel="stylesheet" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<style>
    /*Định dạng trang tin tức*/
    .tt_table {
        color: black;
    }

        .tt_table tr td a {
            text-decoration: none;
            color: red;
            font-weight: bold;
        }

    .tt_khunghinh {
        width: 545px;
        height: 240px;
        margin: 4px;
        border-radius: 7px;
        background-color: white;
    }
</style>
<div>

    <div class=" text-center"><h2><i>TIN TỨC</i> </h2></div>



    @foreach (var item in Model)
    {

        <div class="col-md-6">
            <table class="tt_table">
                <tr>
                    <td colspan="2">
                        <a href="@item.href">@item.TenTT</a>
                    </td>
                </tr>
                <tr>
                    <td rowspan="2">
                        <img src="~/Images/tintuc/@item.HinhMinhHoa" class="img-responsive" alt="Sản phẩm 1">
                    </td>
                    <td>
                        <p>@item.date</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>@item.TomTat</p>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:right">
                        <a href="@item.href">Chi tiết.....</a>
                    </td>
                </tr>
            </table>
        </div>

    }
</div>



