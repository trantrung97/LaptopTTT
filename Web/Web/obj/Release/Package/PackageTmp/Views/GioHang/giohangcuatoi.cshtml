
@{
    ViewBag.Title = "giohangcuatoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-dark" style="width:80%;">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Địa chỉ</th>

            <th>Số điện thoại</th>
            <th>Ngày giao hàng</th>
            <th>Giá</th>

            <th>QUá trình</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.sklist)
        {
            <tr>

                <td>@item.TenKH</td>
                <td>@item.DiaChi</td>

                <td>@item.SDT</td>

                <td>@item.NgayGiaoHang</td>
                <td>@item.TriGiaDH</td>
                @{
                if (@item.Dagiao == false)
                {
                            <td>Đang giao</td>}
                    else
                    {
                <td>Đã giao</td>}
                }
            </tr>
        }

    </tbody>
</table>

